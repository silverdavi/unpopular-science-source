  \node[anchor=east] at (backcenter) {Back Center};
  
  % Main description
  \node[anchor=north, fill=yellow!30] at ([yshift=-1in]backcenter) {
    \begin{tcolorbox}[coverbox, width=5.8in]
      \fontsize{11.5}{16}\selectfont
      \raggedright
      Fifty phenomena from humanity's exploration of nature...
    \end{tcolorbox}
  };
  
\end{tikzpicture}
