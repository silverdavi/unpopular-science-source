% Topic map macro: render as small caps with ○ separator
\newcommand{\topicmap}[1]{%
  \noindent\textsc{%
    \def\tempa{}%
    \foreach \x in {#1} {%
      \ifx\tempa\empty
        \x
      \else
        \enspace$\circ$\enspace\x
      \fi
      \xdef\tempa{nonempty}%
    }%
  }%
}




